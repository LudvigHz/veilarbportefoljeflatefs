<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>veilarbportefoljeflatefs</display-name>
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <name>VEILARBPORTEFOLJEFLATEFS_JSESSIONID</name>
            <http-only>true</http-only>
            <secure>true</secure>
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
    </listener>

    <context-param>
        <param-name>contextClass</param-name>
        <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
    </context-param>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>no.nav.fo.veilarbportefoljeflatefs.config.ApplicationConfig</param-value>
    </context-param>

    <filter>
        <filter-name>miljovariablerJsFilter</filter-name>
        <filter-class>no.nav.poc.miljovariablerfilter.MiljovariablerJsFilter</filter-class>
        <init-param>
            <param-name>scope-name</param-name>
            <param-value>loginparameters</param-value>
        </init-param>
        <init-param>
            <param-name>env-vars</param-name>
            <param-value>
                openAMTokenIssuer.url
            </param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>miljovariablerJsFilter</filter-name>
        <url-pattern>/autologin.js</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>

    <servlet>
        <servlet-name>selftest</servlet-name>
        <servlet-class>no.nav.fo.veilarbportefoljeflatefs.internal.SelftestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>selftest</servlet-name>
        <url-pattern>/internal/selftest</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>selftest-json</servlet-name>
        <servlet-class>no.nav.fo.veilarbportefoljeflatefs.internal.SelftestJsonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>selftest-json</servlet-name>
        <url-pattern>/internal/selftest.json</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>isAlive</servlet-name>
        <servlet-class>no.nav.fo.veilarbportefoljeflatefs.internal.IsAliveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>isAlive</servlet-name>
        <url-pattern>/internal/isAlive</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>restservlet</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>no.nav.fo.veilarbportefoljeflatefs.provider.rest.RestConfig</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>restservlet</servlet-name>
        <url-pattern>/tjenester/*</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/app/index.html</location>
    </error-page>


    <servlet>
        <servlet-name>reactapp</servlet-name>
        <servlet-class>no.nav.fo.veilarbportefoljeflatefs.internal.ApplicationServlet</servlet-class>
        <init-param>
            <param-name>applicationFile</param-name>
            <param-value>index.html</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>reactapp</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>
